@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{

    <a class="nav-item nav-link" title="Manage">Hello @User.Identity.Name!</a>


    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="btn btn-primary rounded-pill px-3 d-none d-lg-block">الخروج</button>
    </form>

}
else
{

   @* <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>*@
    <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Login">الدخول</a>
}

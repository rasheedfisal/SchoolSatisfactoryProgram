    <script src="~/datatable/js/jquery.dataTables.min.js"></script>
    @*<script src="/datatable/js/responsive.bootstrap.min.js"></script>*@

    <script src="~/js/main.js" charset="utf-8"></script>
    <!-- Template Javascript -->
